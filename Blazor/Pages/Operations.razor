@page "/operations"

<PageTitle>Operations</PageTitle>

<h1>Operations</h1>

<div class =btn-group>

    <button type="button" class="btn btn-primary" @onclick="Plus2">+2</button>

    <button type="button" class="btn btn-primary" @onclick="Multiply2">*2</button>

    <button type="button" class="btn btn-primary" @onclick="Minus2">-2</button>
</div>
<span >@comparisonResult</span>

<br>

<div class="container p-1 border">

    <pre>
        @message
    </pre>

</div>

@code{

private int number = 7;

private string comparisonResult="less than 100!";

//string that represents output
private string message = "7";

private void Plus2(){
    number +=2; //number is incremented by 2
    message += "\n" + number;
    if (number < 100){
        comparisonResult = number + " less than 100!";
    }   
    if (number == 100){
        comparisonResult = number + " equal to 100!"; 
    }
    if (number >100){
        comparisonResult = number +" greater than 100!";
    }
}

/* The function that follows duplicates 
the number, and value of the duplicated number
concatenate to the message
*/

private void Multiply2(){
    number *=2;
    message +="\n" + number;
    if (number < 100){
        comparisonResult = number + " less than 100!";
    }   
    if (number == 100){
        comparisonResult = number + " equal to 100!"; 
    }
    if (number >100){
        comparisonResult = number +" greater than 100!";
    }
}

private void Minus2(){
    number-=2;
    message +="\n" + number;
    if (number < 100){
        comparisonResult = number + " less than 100!";
    }   
    if (number == 100){
        comparisonResult = number + " equal to 100!"; 
    }
    if (number >100){
        comparisonResult = number +" greater than 100!";
    }
}
}
